@model ExamCreator.Areas.Admin.Models.ViewModels.Grade.EditGrade

@{
    ViewData["Title"] = "SİNİFİ Yenilə";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4>SİNİFİ Yenilə</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden />
            <input asp-for="CreatedDate" hidden />
            <input asp-for="ModifyedDate" hidden />
            <input asp-for="CreatUserId" hidden />
            <input asp-for="ModifyUserId" hidden />

            <div class="form-group">
                <label asp-for="Name" class="control-label">SİNİF</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> STATUS
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> SİLİNMİŞ
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Əlavə Et" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Geri</a>
</div>


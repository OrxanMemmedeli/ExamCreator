@model IEnumerable<ExamCreator.Areas.Admin.Models.ViewModels.Grade.ListGrade>

@{
    ViewData["Title"] = "Siniflə";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Siniflər</h1>


<p>
    <a asp-action="Create" title="Yeni məlumat" style="justify-content: center;">
        <div class="d-none d-xl-block ps-2">
            <div>Yeni SİNİF</div>
            <lord-icon src="https://cdn.lordicon.com/rfbqeber.json"
                       trigger="hover"
                       style="width:70px;height:70px">
            </lord-icon>
        </div>
    </a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                SİNİF
            </th>
            <th>
                STATUS
            </th>
            <th>
                SİLİNMİŞ
            </th>
            <th>
                YARADILDI
            </th>
            <th>
                DƏYİŞDİRİLDİ
            </th>
            <th>
                YARADAN
            </th>
            <th>
                DƏYİŞDİRƏN
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Status)
                    {
                        <span class="badge badge-success">Aktiv</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Passiv</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    @item.CreatedDate.Value.ToString("dd.MM.yyyy - HH:mm")
                </td>
                <td>
                    @item.ModifyedDate.Value.ToString("dd.MM.yyyy - HH:mm")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifyUserName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Düzəliş et">
                        <lord-icon src="https://cdn.lordicon.com/bxxnzvfm.json"
                               trigger="hover"
                               style="width:40px;height:40px">
                        </lord-icon>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Sil" onclick="return confirm('Seçdiyiniz sətr silinəmiş statusuna keçiriləcəkdir. \n Status dəyişikliyi edilsinmi?')">
                        <lord-icon src="https://cdn.lordicon.com/qjwkduhc.json"
                               trigger="hover"
                               style="width:40px;height:40px">
                        </lord-icon>
                    </a>
                    <a asp-action="Remove" asp-route-id="@item.Id" title="Birdəfəlik Sil" onclick="return confirm('Silinən məlumatların geri qaytarılması mümkün deyil. \n Sətiri yənədə silmək istəyirsinizmi?')">
                        <lord-icon src="https://cdn.lordicon.com/inrunzby.json"
                               trigger="hover"
                               style="width:40px;height:40px">
                        </lord-icon>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


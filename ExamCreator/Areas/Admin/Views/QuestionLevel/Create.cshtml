@model DTOLayer.DTOs.QuestionLevel.QuestionLevelCreateDTO

@{
    ViewData["Title"] = "Yeni Səviyyə";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Yeni Səviyyə</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">SƏVİYYƏ (sözlə ifadə)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label">ÇƏTİNLİK (rəqəmlə ifadə {1-5})</label>
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Əlavə Et" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Geri</a>
            </div>
        </form>
    </div>
</div>

@model DTOLayer.DTOs.Company.CompanyEditDTO

@{
    ViewData["Title"] = "DTOLAYER.DTOS.COMPANY.COMPANYEDITDTO Yenilə";
                    Layout = "~/Views/Shared/_AdminLayout.cshtml"; //Layouta  diqqet et
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" hidden value="@Model.Id" />

            
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" value="@Model?.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogoUrl" class="control-label">LogoUrl</label>
                <input asp-for="LogoUrl" class="form-control" value="@Model?.LogoUrl" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">StartDate</label>
                <input asp-for="StartDate" class="form-control" value="@Model?.StartDate" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DailyAmount" class="control-label">DailyAmount</label>
                <input asp-for="DailyAmount" class="form-control" value="@Model?.DailyAmount" />
                <span asp-validation-for="DailyAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DebtLimit" class="control-label">DebtLimit</label>
                <input asp-for="DebtLimit" class="form-control" value="@Model?.DebtLimit" />
                <span asp-validation-for="DebtLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersentOfFine" class="control-label">PersentOfFine</label>
                <input asp-for="PersentOfFine" class="form-control" value="@Model?.PersentOfFine" />
                <span asp-validation-for="PersentOfFine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFree" class="control-label">IsFree</label>
                <input asp-for="IsFree" class="form-control" value="@Model?.IsFree" />
                <span asp-validation-for="IsFree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id</label>
                <input asp-for="Id" class="form-control" value="@Model?.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <input asp-for="Status" class="form-control" value="@Model?.Status" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsDeleted" class="control-label">IsDeleted</label>
                <input asp-for="IsDeleted" class="form-control" value="@Model?.IsDeleted" />
                <span asp-validation-for="IsDeleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModifyedDate" class="control-label">ModifyedDate</label>
                <input asp-for="ModifyedDate" class="form-control" value="@Model?.ModifyedDate" />
                <span asp-validation-for="ModifyedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yenilə" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Geri</a>
            </div>
        </form>
    </div>
</div>
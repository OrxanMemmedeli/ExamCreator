@model DTOLayer.DTOs.Section.SectionEditDTO

@{
    ViewData["Title"] = "BÖLMƏNİ Yenilə";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>BÖLMƏNİ Yenilə</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden value="@Model.Id" />
            <input asp-for="CreatedDate" hidden value="@Model.CreatedDate" />
            <input asp-for="ModifyedDate" hidden value="@Model.ModifyedDate" />
            <input asp-for="CreatUserId" hidden value="@Model.CreatUserId" />
            <input asp-for="ModifyUserId" hidden value="@Model.ModifyUserId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">SİNİF</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fənn seçin</label>
                <select id="SubjectId" name="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> STATUS
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> SİLİNMİŞ
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Əlavə Et" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Geri</a>
            </div>
        </form>
    </div>
</div>